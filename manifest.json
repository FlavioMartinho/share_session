{
    "name"              : "Share Sessions",
    "version"           : "0.1.3",
    "manifest_version"  : 2,
    "description"       : "Share your cookies on any site with a friend. Copy your logged-in session to another computer without using your login credentials!",
    "background"        : {
        "page"          : "background.html"
    },
    "omnibox"           : {
        "keyword"       : "session_load"
    },
    "icons": {
        "48"            : "vcards48.png",
        "128"           : "vcards128.png"
    },
    "minimum_chrome_version"
                        : "21",
    "permissions"       : [
        "cookies",
        "*://*/*",
        "clipboardWrite",
        "contextMenus",
        "tabs"
    ]
}

